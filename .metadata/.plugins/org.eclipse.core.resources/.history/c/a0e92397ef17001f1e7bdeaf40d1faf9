#include <stdio.h>
#include <stdlib.h>

char *readFileAsString(char* filepath)
{
	int fileSize = 0;
	int n, i, j;
	FILE *pFile = fopen(filepath, "rb");
	if (pFile == NULL)
	{
		puts("error opening file");
		//exit(1);
	}
	fseek(pFile,0,SEEK_END);
	fileSize = ftell(pFile);
	rewind(pFile);

	char *data = (char*) calloc (sizeof(char), fileSize + 20);
	fread(data, 1, fileSize, pFile);
	puts(data);
	fclose(pFile);
	puts("Done");
	return data;
}

int countCommas(char* str)
{
	int count = 0;
	int pos = 0;
	while (str[pos] != '\0')
	{
		if (str[pos] == ',')
		{
			count++;
		}
	}
	return count;
}

int main(void) {
	//puts("!!!Hello World!!!"); /* prints !!!Hello World!!! */
	int count = 0;
	char* data = readFileAsString("data.in");
	puts("done");
	printf("donereading");
	count = countCommas(data);
	printf("\n numberOfItems:");
	printf(count);
	return EXIT_SUCCESS;
}


